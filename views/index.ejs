<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Task Tracker</title>
    
    <!-- Bootstrap & FontAwesome -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>

    <div class="container mt-5">
        <h1 class="text-center mb-4">ğŸš€ Task Tracker</h1>

        <!-- Task Form -->
        <div class="card p-4 shadow-lg">
            <form action="/add" method="POST" class="row g-3">
                <div class="col-md-5">
                    <input type="text" name="title" class="form-control" placeholder="Task Title" required>
                </div>
                <div class="col-md-5">
                    <input type="text" name="description" class="form-control" placeholder="Task Description">
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-success w-100"><i class="fas fa-plus"></i> Add</button>
                </div>
            </form>
        </div>

        <!-- Task List -->
        <ul class="list-group mt-4">
            <% tasks.forEach(task => { %>
                <li class="list-group-item d-flex justify-content-between align-items-center shadow-sm">
                    <div class="<%= task.completed ? 'text-decoration-line-through text-muted' : '' %>">
                        <strong><%= task.title %></strong> - <%= task.description %>
                    </div>
                    <div>
                        <% if (!task.completed) { %>
                            <form action="/complete/<%= task._id %>" method="POST" class="d-inline">
                                <button class="btn btn-warning btn-sm"><i class="fas fa-check"></i></button>
                            </form>
                        <% } %>
                        <form action="/delete/<%= task._id %>" method="POST" class="d-inline">
                            <button class="btn btn-danger btn-sm"><i class="fas fa-trash"></i></button>
                        </form>
                    </div>
                </li>
            <% }); %>
        </ul>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
